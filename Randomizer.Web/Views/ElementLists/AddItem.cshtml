@model Randomizer.Model.ElementList
@{
    Layout = "_Layout";
}

<h2>Add Item</h2>
<h4>@Model.Name</h4>
<hr />

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<form class="form-horizontal" asp-controller="ElementLists" asp-action="AddItem" method="post">
    @for (int i = 0; i < Model.Elements.Count(); i++)
    {
        @Html.EditorFor(model => model.Elements[i])
    }
        

    <div class="form-group">
        <div class="col-md-2"></div>
        <div class="col-md-10">
            <button type="submit" name="Save" class="btn btn-default">Save</button>
        </div>
    </div>
</form>

<div class="form-group">
    <a asp-action="Index">Back to list</a>
</div>
