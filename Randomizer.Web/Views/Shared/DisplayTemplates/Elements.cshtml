@model IEnumerable<Randomizer.Model.SimpleElement>


<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">List Items</h3>
    </div>
    <div class="panel-body">
        <p>
            <a asp-action="Create" asp-controller="Elements"
               asp-route-listID="@this.ViewContext.RouteData.Values["id"]"
               class="btn btn-success"><i class="fa fa-plus"></i> Add</a>
        </p>
        @if (Model.Count() != 0)
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Description)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                <a class="btn btn-default btn-sm"
                                   asp-action="Edit"
                                   asp-controller="Elements"
                                   asp-route-id="@item.ID">
                                    <i class="fa fa-edit"></i> Edit
                                </a>
                                <a class="btn btn-danger btn-sm"
                                   asp-action="Delete"
                                   asp-controller="Elements"
                                   asp-route-id="@item.ID">
                                    <i class="fa fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>